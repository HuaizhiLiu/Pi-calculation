//language swift playgroud: answer
var Pi:Double = 3
var Repeat:Bool = true
var add:Double = 2
var PosNeg:Double = 1
var count:Int = 10000
while Repeat == true {
    Pi = Pi + PosNeg*4/(add*(add+1)*(add+2))
    PosNeg = PosNeg * -1
    add = add + 2
    count = count - 1
    if count == 0 {
        show (Pi)
        count = 10000
    }
    else {
    }
}
